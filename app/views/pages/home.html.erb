<h1>Pages#home</h1>

<div
  class="container d-flex flex-column align-items-center justify-content-center align-items-center justify-content-center bg-danger"
  <%# style="height: 50%" %>
>
  <div class="d-flex align-items-center justify-content-center">
    <%= form_with url: search_path, method: :get, local: true, class: 'search-form' do %>
      <%= text_field_tag :first_name, params[:first_name], placeholder: "First Name", class: 'form-input' %>
      <%= text_field_tag :phone_number, params[:phone_number], placeholder: "Phone Number", class: 'form-input' %>
      <%= submit_tag "Search", class: 'search-button' %>
    <% end %>
  </div>
</div>
