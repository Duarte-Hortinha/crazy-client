
<div class="content-container" data-controller="alert" data-alert-target="container">
  <div class="d-flex flex-column justify-content-center align-items-center">
    <div class="form-card" id="new-client-form">

      <div class="text-center my-3">
        <h3>Add new client</h3>
      </div>

      <div>
        <%= simple_form_for client, html: {data: {alert_target: "form"}} do |f|  %>
          <%= f.input :first_name, input_html: { value: @first_fill.capitalize, data: { alert_target: "firstName" } } %>
          <%= f.input :last_name, input_html: { value: @last_fill.capitalize, data: { alert_target: "lastName" } } %>
          <%= f.input :phone_number, input_html: { value: @phone_fill, data: { alert_target: "phoneNumber" } } %>
      <div class="pt-4 pb-2">
          <%= f.button :submit, class: "btn btn-info w-100", data: { action: "click->alert#confirmAlert" }  %>
        <% end %>
      </div>
      </div>

    </div>
  </div>
</div>
