
<div class="container">
  <div class="card-category_show m-4">
    <div class="m-4">
     <h2 red> <%= @client.ccr %> </h2>
    </div>
    <div class="flex-grow-1 m-5">
      <h2><%= @client.first_name %> <%= @client.last_name %></h2>
      <p><%= @client.phone_number %></p>
    </div>
    <div class="m-4">
     <%= link_to "Book", new_client_booking_path(@client.id), class:"btn btn-info" %>

    </div>
  </div>

  <div class="d-flex flex-column justify-content-center">
    <h3 class="text-center">Reviews</h3>

    <% if @client.bookings %>
      <% @client.bookings.each do |booking| %>
        <%= booking.review %>
        <!-- Do more when there is a new SEED when there are clients where 1 booking for 1 review ONLY -->
        <!-- Build an inline card with comment, punctuality & attendance (with if statement) and belonged restaurant -->
        <!-- TO DO day 06/06/2024 -->
        <%= link_to "See further Review details", booking_review_path(booking), class:"btn btn-info" %>
      <% end %>
    <% else %>
      <p>Mr <%= @client.last_name %> does not have any reviews yet!</p>
      <%= link_to "Bookings", bookings_path, class:"btn btn-info" %>
    <% end %>

  </div>
</div>
