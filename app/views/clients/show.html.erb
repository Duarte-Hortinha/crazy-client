
<div class="container">
  <div class="card-category_show m-4">
    <div class="m-4">
     <h2 red> <%= @client.ccr %> </h2>
    </div>
    <div class="flex-grow-1 m-5">
      <h2><%= @client.first_name %> <%= @client.last_name %></h2>
      <p><%= @client.phone_number %></p>
    </div>
    <div class="m-4">
     <%= link_to "Book", new_client_booking_path(@client.id), class:"btn btn-info" %>

    </div>
  </div>

  <div class="d-flex flex-column justify-content-center">
    <h2 class="text-center">Client Reviews</h2>

    <% if @client.bookings %>
      <% @client.bookings.each do |booking| %>
        <% if booking.review.attendance %>
          <p>Mr <span class="fw-semibold"><%= booking.client.last_name %></span> ate at <em><%= booking.restaurant.name %></em> |
          Showed up? <strong>YES</strong> |
          Late by <span class="fw-bold"><%= booking.review.punctuality %> </span>minutes
          <%= link_to "See further review details", booking_review_path(booking), class:"btn btn-info float-right" %>
          </p>
        <% else %>
          <p>Mr <span class="fw-semibold"><%= booking.client.last_name %></span> ate at <em><%= booking.restaurant.name %></em> |
          Showed up? <strong>NO</strong> <%= link_to "See further review details", booking_review_path(booking), class:"btn btn-info float-right" %>
          </p>
        <% end %>
      <% end %>
    <% else %>
      <p>Mr <em><%= @client.last_name %></em> does not have any reviews yet!</p>
      <%= link_to "Back to Bookings Registry", bookings_path, class:"btn btn-info" %>
    <% end %>

  </div>
</div>
