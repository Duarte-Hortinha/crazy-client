
<div class="content-container">
  <div class="d-flex justify-content-center">
    <div class="form-card" data-controller="alert">
      <%= simple_form_for @client do |f|  %>
        <%= f.input :first_name, input_html: { value: @first_fill, data: { alert_target: "firstName" } } %>
        <%= f.input :last_name, input_html: { value: @last_fill, data: { alert_target: "lastName" } } %>
        <%= f.input :phone_number, input_html: { value: @phone_fill, data: { alert_target: "phoneNumber" } } %>
        <%= f.button :submit, class: "btn btn-info w-100", data: { action: "submit->alert#confirmAlert" }  %>
      <% end %>
    </div>
  </div>
</div>
