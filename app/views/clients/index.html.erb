<h1>Clients</h1>


<div class="container">

    <% @clients.each do |client| %>
      <div class="card-category d-flex flex-row justify-content-between">
        <div class="flex-item m-5">
          <p>Rating</p>
        </div>



        <div class="flex-item flex-grow-1 m-4">
          <p><%= client.first_name %> <%= client.last_name %></p>
          <p>phone number</p>
        </div>

        <div class="flex-item me-5">
          <div class="d-flex align-items-start">
            <p><%= link_to "see details" %></p>
          </div>
          <div class="d-flex align-items-end">
            <p><%= link_to "Book now", "#", class: "btn btn-outline-primary" %></p>
          </div>
        </div>
      </div>
    <% end %>

    </div>

</div>
