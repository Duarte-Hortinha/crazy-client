<div class="container mt-4 mb-4">
  <div class="container m-4 d-flex justify-content-center">
    <h1>Clients</h1>
  </div>


    <% @clients.each do |client| %>
  <div class="container m-4 d-flex col-8-lg justify-content-center">
            <div class="card-category d-flex flex-row justify-content-between">

                <div class="flex-item m-5">
                  <p>Rating</p>
                </div>

                <div class="flex-item flex-grow-1 m-4">
                  <p><i class="fa-solid fa-user"></i>  <%= client.first_name %> <%= client.last_name %></p>
                  <p><i class="fa-solid fa-phone"></i>  <%= client.phone_number %></p>
                </div>

                <div class="flex-item me-5">
                  <div class="d-flex align-items-start">
                    <p><%= link_to "see details", class: "see-details" %></p>
                  </div>
                  <div class="d-flex align-items-end">
                    <p><%= link_to "Book now", "#", class: "btn btn-outline-primary rounded-3" %></p>
                  </div>
                </div>
              </div>
  </div>
    <% end %>


    </div>

</div>
