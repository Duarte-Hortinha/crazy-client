<div class="container">
  <h2>Review of <%= @review.booking.client.first_name %> <%= @review.booking.client.last_name %></h2>
  <p>Customer delay time: <%= @review.punctuality if @review.attendance == true %></p>
  <p><%= @review.comment %></p>
  <p><%= @review.created_at %></p>
  <p><%= link_to "client profile", client_path(@review.booking.client), class: "btn btn-info" %></p>
</div>


<h2>Second version - after the index was removed</h2>
<div class="empty-for-now">
    <div lcass="card-info">
      <h3 class="h3">Crazy behaviour happened: <%= @review.booking.booking_start %></h3>
      <% if @review.attendance %>
        <p>Mr <em><%= @review.booking.client.last_name %></em>
          showed up, but arrived <strong><%= @review.punctuality %></strong> minutes late!
        </p>
      <% else %>
        <p>Mr <em><%= @review.booking.client.last_name %></em> did <strong>not</strong> show up!</p>
      <% end %>
      <div class="div-to-pop">
        <span class="to-populate">
          Comment left by <em><%= @review.booking.restaurant.name %></em>'s manager:
        </span>
        <p class="text-info">
        <%= @review.comment %>
        </p>
      </div>
    </div>
</div>
