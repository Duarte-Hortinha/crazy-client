<div class="d-flex justify-content-center">
    <div class="form-card" style="width: 35rem">

      <div class="row py-2 mb-3 d-flex justify-content-center" style="gap: 20px">
        <h2 class="d-flex justify-content-center">Book a table for </h2>
        <h4 class="d-flex justify-content-center text-center"><strong><%= client.first_name %> <%= client.last_name %> </strong> <i class="fa-solid fa-phone ms-3 me-2"></i> <%= client.phone_number%></h4>
      </div>
      <div class="py-2">
        <%= simple_form_for [client, booking], data: { controller: 'datepicker' } do |f| %>
          <%= f.input :booking_start, :label => false, as: :string, input_html: {class: "d-none", data: { datepicker_target: "bookingStart" } } %>
            <div class="my-5">
          <%= f.input :party_count, as: :integer, input_html: {min: 1, max: 50, step: 1, class:"custom-input" } %>
          <%= f.input :comment, hint: 'optional', as: :string %>
            </div>
            <div class="d-flex justify-content-center">
          <%= f.submit 'Confirm this Booking', class:"text-decoration-none btn btn-info rounded-3", id:"bookButton" %>
            </div>
        <% end %>
      </div>

    </div>
</div>
